body
	background-image url("images/bg-default.jpg")
	background-attachment fixed
	background-color rgba(0, 0, 0, 0.5)
	background-size 100% 100%
	overflow scroll

	.content
		display flex
		flex-wrap wrap
		justify-content space-around

	.container
		display inline-flex
		flex-wrap wrap
		width 300px
		height 300px
		margin 20px
		transition .3s

		&:hover
			box-shadow 3px 3px 3px
			filter brightness(110%)

	.twitch
		width 300px
		height 200px

	.user
		width 300px
		height 100px
		background rgba(0, 0, 0, 0.4)

	.user_profile
		float left
		width 70px
		height 90px
		margin 0px
		margin-top 5px
		margin-left 5px
		border-radius 50%

	.user_content
		margin 0px
		margin-left 100px
		margin-top 15px
		font-family "Times New Roman"
		color grey
